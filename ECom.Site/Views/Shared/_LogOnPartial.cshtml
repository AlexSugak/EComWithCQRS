@if(Request.IsAuthenticated) {

	var userDetails = new ECom.ReadModel.Views.UserDetailsView(ECom.Site.ServiceLocator.DtoManager)
                                .GetUserDetails(new ECom.Messages.UserId(User.Identity.Name));

	if (!String.IsNullOrWhiteSpace(userDetails.PhotoUrl))
	{
		<img style="height:30px;" src="@userDetails.PhotoUrl" /> 
	}
	
    <text><strong>@userDetails.Name</strong>
    [ @Html.ActionLink("Log Off", "LogOff", "Account", new { Area = String.Empty }, null ) ]</text>
}
else {
     @:[ @Html.ActionLink("Log On", "LogOn", "Account", new { Area = String.Empty }, null ) ]
}
